# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

target 'Estudios' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Estudios  
  
  # Cover image for empty table views
  pod 'DZNEmptyDataSet'

  # Modern colors collection
  pod 'ChameleonFramework', :git => 'https://github.com/ViccAlexander/Chameleon.git', :branch => 'swift3'

  # Powerful networking library
  pod 'Alamofire'

  # For getting permissions
  pod 'PermissionScope', :git => 'https://github.com/nickoneill/PermissionScope.git', :branch => 'swift3'

  # For parsing JSON
  pod 'SwiftyJSON'

  # For convinient action sheets
  pod 'Eureka', '~> 2.0.0-beta.1'

end
